<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Static Analysis Rules"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0
                             http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

    <description>Rules enforcing complexity limits.</description>

    <!-- In practice, CC answers: “How many paths exist?” -->
    <rule ref="category/java/design.xml/CyclomaticComplexity">
        <properties>
            <property name="classReportLevel" value="20"/> <!-- utility class tolerance -->
            <property name="methodReportLevel" value="10"/>
        </properties>
    </rule>
    <!-- In practice, CogC answers: “How hard is this to understand?” -->
    <rule ref="category/java/design.xml/CognitiveComplexity">
        <properties>
            <property name="reportLevel" value="15"/>
        </properties>
    </rule>
</ruleset>
